// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  age      Int
  addr     String
  favfood  String?  @default("없음") // ?로 선택적 요소 설정 가능.
  createAt DateTime @default(now()) // 현재 시각
  updateAt DateTime @updatedAt // 업데이트 시각    
}

model Post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model testDevice {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  product           String
  location          String
  unit              String?
  memo              String?
  createAt          DateTime            @default(now())
  updateAt          DateTime            @updatedAt
  testDeviceSencing testDeviceSencing[]
}

model testDeviceSencing {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  value    Int
  device   testDevice? @relation(fields: [deviceid], references: [id])
  deviceid String
}
